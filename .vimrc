syntax on
set number
set encoding=utf-8

set nocompatible

set autoindent
set smartindent

" ignore case when searching
set ignorecase

" highlight search results
set hlsearch

" show matching brackets
set showmatch

" width of \t
set tabstop=4
" indents will have a width of 4
set shiftwidth=4
" sets the numnber of columns for \t
set softtabstop=4
" expands \t to spaces
set expandtab

" color
colors made_of_code 

nmap <F1> :w<CR>
imap <F1> <Esc>:w<CR>

